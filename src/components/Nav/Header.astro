---
import Navigation from './Navigation.astro'
import Link from './Link.astro'
import { SkipLinks } from 'accessible-astro-components'
---

<header>
  <SkipLinks />
  <Navigation>
    <Link link="/" linkName="Home" />
    <Link link="/posts/" linkName="Posts" />
    <Link link="/about-us/" linkName="About Us" />
    <Link link="/contact-us/" linkName="Contact Us" />
    <Link link="/privacy-policy/" linkName="Privacy Policy" />
    <Link isExternal link="https://aidanlowson.com" linkName="Portfolio" />
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
