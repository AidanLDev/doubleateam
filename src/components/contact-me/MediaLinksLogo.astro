---
export interface Props {
  imgSrc: string
  imgAlt: string
  link: string
}

const { imgSrc, imgAlt, link } = Astro.props
---

<a href={link} target="_blank" rel="noreferrer">
  <div class="logo-container" style={{ backgroundImage: `url(${imgSrc})` }}>
    <span>{imgAlt}</span>
  </div>
</a>

<style lang="scss">
  .logo-container {
    background-size: contain;
    width: 160px;
    height: 160px;
    border-radius: 100px;
    cursor: pointer;
    display: flex;
    transition: all 2s;
    filter: brightness(0.7);
    flex-direction: column-reverse;
    &:hover {
      filter: brightness(1);
    }
  }
</style>
